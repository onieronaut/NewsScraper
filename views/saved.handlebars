{{#unless articles}}

<h2>No Saved Articles</h2>


{{else}}
{{#each articles}}

{{#if saved}}
<div class="row">
    <div class="col-sm-12 article" data-id={{id}}>

        <a href="{{link}}" target="_blank">
            <h2>{{title}}</h2>
        </a>

        <p>{{description}}</p>

        <button class="btn btn-danger delete">X</button>
        <button class="btn btn-dark comment">Comment</button>
    </div>

</div>
{{/if}}
{{/each}}
{{/unless}}



<script>
    $(document).ready(function () {

        $(".article").on("click", function () {

            let id = $(this).data("id");
        });

        $(".delete").on("click", function () {

            let id = $(this).parent().data("id");

            $.ajax({
                method: "POST",
                url: "/unsaved/" + id

            }).then( (result) => {
                window.location.reload();
            });

        });
    });
</script>
